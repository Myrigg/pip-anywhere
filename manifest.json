{
  "manifest_version": 3,
  "name": "PiP Anywhere",
  "description": "Watch video in Picture-in-Picture on any site. Automatically picks the main visible video on the page.",
  "version": "3.2.0",

  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },

  "action": {
    "default_title": "Enable Picture-in-Picture",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "commands": {
    "trigger-pip": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Trigger Picture-in-Picture on the active tab"
    }
  }
}
